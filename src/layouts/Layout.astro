---
const isHome = Astro.url.pathname === '/';
const {
  title = 'ml, bio, coding | anuraag',
  description = 'thoughts on neural nets, chips, and cells',
  ogType = 'website',
  publishedTime,
  schemaArticle,
} = Astro.props;

const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.toString();
const siteUrl = Astro.site ? new URL('/', Astro.site).toString() : canonicalUrl;
const ogImageUrl = Astro.site ? new URL('/favicon.ico', Astro.site).toString() : '/favicon.ico';
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": `${siteUrl}#person`,
  "name": "Anuraag Warudkar",
  "alternateName": ["anuraag", "anuraagw"],
  "url": siteUrl,
  "sameAs": [
    "https://github.com/boopdotpng",
    "https://twitter.com/boopdotpng"
  ],
  "jobTitle": "Software Engineer"
};
const websiteSchema = isHome ? {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${siteUrl}#website`,
  "name": "anuraag",
  "url": siteUrl,
  "publisher": { "@id": `${siteUrl}#person` }
} : null;
let articleSchema = schemaArticle ? {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": schemaArticle.title,
  "description": schemaArticle.description,
  "datePublished": schemaArticle.publishedTime,
  "dateModified": schemaArticle.updatedTime ?? schemaArticle.publishedTime,
  "mainEntityOfPage": { "@type": "WebPage", "@id": canonicalUrl },
  "author": { "@id": `${siteUrl}#person` },
  "publisher": { "@id": `${siteUrl}#person` }
} : null;
if (articleSchema && schemaArticle?.imageUrl) {
  articleSchema = { ...articleSchema, image: [schemaArticle.imageUrl] };
}
---
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta
      name="robots"
      content="index,follow,max-image-preview:large,max-snippet:-1,max-video-preview:-1"
    />
  
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="preload" href="/fonts/GoogleSansCode-Variable.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/GoogleSansCode-VariableItalic.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="stylesheet" href="/katex.min.css" />
    <link rel="stylesheet" href="/markdown.css" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" type="application/rss+xml" title="anuraag â€” notes" href="/rss.xml" />
  
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="anuraag" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
  
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
  
<style>
  @font-face {
    font-family: "Google Sans Code";
    font-style: normal;
    font-weight: 300 800;
    font-display: swap;
    src: url("/fonts/GoogleSansCode-Variable.ttf") format("truetype");
  }

  @font-face {
    font-family: "Google Sans Code";
    font-style: italic;
    font-weight: 300 800;
    font-display: swap;
    src: url("/fonts/GoogleSansCode-VariableItalic.ttf") format("truetype");
  }

  :root {
    --bg: #18181b;
    --fg: #f4f4f5;
    --accent: #58a6ff;
    --font-size: 16px;
    --font-sans: system-ui, sans-serif;
    --font-mono: "Google Sans Code", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  }

  html, body {
    margin: 0;
    padding: 0;
    background: var(--bg);
    color: var(--fg);
    font-family: var(--font-sans);
    line-height: 1.5;
    font-size: var(--font-size);
  }

  code, pre, kbd, samp {
    font-family: var(--font-mono);
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem clamp(1rem, 4vw, 2rem);
    box-sizing: border-box;
    max-width: 980px;
    margin: 0 auto;
    width: 100%;
  }

  .site-title {
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0;
  }

  .site-title a {
    color: var(--fg);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }

  .site-title a:hover {
    color: var(--accent);
  }

  .site-title a .arrow {
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 1em;
    line-height: 1;
    color: var(--accent);
  }

  nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 0.4rem;
    align-items: center;
  }

  nav a {
    color: #b0b7c3;
    text-decoration: none;
    font-size: 0.95rem;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    transition: background 0.2s ease, color 0.2s ease;
  }

  nav a:hover {
    background: rgba(88, 166, 255, 0.1);
    color: var(--accent);
  }
  .rss-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.4rem;
    border-radius: 6px;
    transition: background 0.2s ease, color 0.2s ease;
  }
  .rss-link:hover {
    background: rgba(88, 166, 255, 0.1);
    color: var(--accent);
  }
  .rss-link svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }
  .rss-link .rss-dot {
    animation: rss-pulse 1.6s ease-in-out infinite;
    transform-origin: center;
  }
  @keyframes rss-pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.85;
    }
    50% {
      transform: scale(1.2);
      opacity: 1;
    }
  }

  main {
    max-width: clamp(720px, 80%, 960px);
    margin: 2rem auto;
    padding: 0 clamp(1rem, 4vw, 2rem);
  }

  .post-card {
    display: block;
    padding: 1rem;
    margin-bottom: 1rem;
    border: 1px solid #333;
    border-radius: 6px;
    transition: background 0.2s;
    text-decoration: none;
    color: inherit;
  }

  .post-card:hover {
    background: #232326;
  }
</style>

  <script type="application/ld+json">{JSON.stringify(personSchema)}</script>
  {websiteSchema && <script type="application/ld+json">{JSON.stringify(websiteSchema)}</script>}
  {articleSchema && <script type="application/ld+json">{JSON.stringify(articleSchema)}</script>}

</head>
<body>
  <header>
    <div class="site-title">
      <a href="/">
        {!isHome && <span class="arrow">&#8592;</span>}
        anuraag
      </a>
    </div>
    <nav>
      <ul>
        <li>
          <a class="rss-link" href="/rss.xml" aria-label="RSS feed">
            <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
              <path d="M6.2 17.8a1.6 1.6 0 1 1-3.2 0 1.6 1.6 0 0 1 3.2 0Z" class="rss-dot"></path>
              <path d="M4 10.2v2.6c3.9 0 7 3.1 7 7h2.6c0-5.3-4.3-9.6-9.6-9.6Z"></path>
              <path d="M4 4v2.6c7.3 0 13.4 6 13.4 13.4H20C20 10.1 13.9 4 4 4Z"></path>
            </svg>
          </a>
        </li>
        <li><a href="https://twitter.com/boopdotpng" target="_blank">twitter</a></li>
        <li><a href="https://github.com/boopdotpng" target="_blank">github</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <slot />
  </main>
</body>
</html>
