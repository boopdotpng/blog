---
const isHome = Astro.url.pathname === '/';
---
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={Astro.props.description ?? 'thoughts on neural nets, chips, and cells'} />
  
    <title>{Astro.props.title ?? 'ml, bio, coding | anuraag'}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/katex.min.css" />
  
    <meta property="og:title" content={Astro.props.title ?? 'ml, bio, coding | anuraag'} />
    <meta property="og:description" content={Astro.props.description ?? 'thoughts on neural nets, chips, and cells'} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://anuraagw.me" />
    <meta property="og:image" content="https://anuraagw.me/preview.png" />
  
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={Astro.props.title ?? 'ml, bio, coding | anuraag'} />
    <meta name="twitter:description" content={Astro.props.description ?? 'thoughts on neural nets, chips, and cells'} />
    <meta name="twitter:image" content="https://anuraagw.me/preview.png" />
  
  <style>
    :root {
      --bg: #18181b;
      --fg: #f4f4f5;
      --accent: #58a6ff;
      --font-size: 16px;
    }
    html, body {
      margin: 0;
      padding: 0;
      background: var(--bg);
      color: var(--fg);
      font-family: system-ui, sans-serif;
      line-height: 1.5;
      font-size: var(--font-size);
    }
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 5vh;
      padding: 0 1rem;
      box-sizing: border-box;
    }
    .site-title {
      font-size: 1rem;
      font-weight: 700;
      margin: 0;
    }
    .site-title a {
      color: var(--fg);
      text-decoration: none;
      display: flex;
      align-items: center;
    }
    .site-title a .arrow {
      margin-right: 0.4rem;
      font-size: 0.9rem;
    }
    nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 1rem;
    }
    nav a {
      color: var(--fg);
      text-decoration: underline;
      font-size: 0.9rem;
    }
    main {
      max-width: 680px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    .post-card {
      display: block;
      padding: 1rem;
      margin-bottom: 1rem;
      border: 1px solid #333;
      border-radius: 6px;
      transition: background 0.2s;
      text-decoration: none;
      color: inherit;
    }
    .post-card:hover {
      background: #232326;
    }
  </style>
</head>
<body>
  <header>
    <div class="site-title">
      <a href="/">
        {!isHome && <span class="arrow">&#8592;</span>}
        anuraag
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/about">about</a></li>
        <li><a href="https://twitter.com/boopdotpng" target="_blank">twitter</a></li>
        <li><a href="https://github.com/boopdotpng" target="_blank">github</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <slot />
  </main>
</body>
</html>
