---
// layout + content loading
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<style>
html, body {
  overflow-x: auto;
}

code, code .line, pre, pre code {
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
  display: block;
}

.markdown-body {
  line-height: 1.8;
}

article.post-plain {
  background: none;
  border: none;
  box-shadow: none;
  margin: 0 auto;
  padding: 0;
  max-width: none !important;
  width: 55vw !important;
  min-width: 0;
  display: block;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.post-title-main {
  font-size: 2.4rem;
  font-weight: 700;
  color: #fff;
  margin: 3rem 0 1rem 0;
  line-height: 1.13;
}

.post-date-main {
  color: #a1a1aa;
  font-size: 1.08rem;
  margin-bottom: 2.2rem;
}

article.post-plain img {
  border-radius: 10px;
  margin: 1.5rem 0;
  max-width: 100%;
  box-shadow: 0 2px 12px 0 rgba(88, 166, 255, 0.07);
}

@media (max-width: 768px) {
  article.post-plain {
    width: 100vw !important;
    max-width: 100vw !important;
    left: 0;
    transform: none;
    padding: 0 1rem;
    margin: 0 auto 2.5rem auto;
  }
}
</style>

<Layout
  title={post.data.title}
  description={post.data.description ?? 'a short post on something'}
>
  <article class="post-plain markdown-body">
    <h1 class="post-title-main">{post.data.title}</h1>
    <div class="post-date-main">
      <time datetime={post.data.pubDate}>{post.data.pubDate}</time>
    </div>
    <Content />
  </article>
</Layout>
