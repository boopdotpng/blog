// layout + content loading
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import galleryScriptUrl from '../../scripts/gallery.ts?url';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => data.published);
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const showContentsTable = post.data.contents_table ?? false;
const tocHeadings = headings.filter(heading => heading.depth >= 1 && heading.depth <= 3);

const parseLocalDate = (dateString: string) => {
  const match = /^(\d{4})-(\d{2})-(\d{2})$/.exec(dateString);
  if (!match) return null;
  const [, year, month, day] = match;
  return new Date(Number(year), Number(month) - 1, Number(day));
};
const publishedTime = (() => {
  const date = parseLocalDate(post.data.pubDate);
  return date ? date.toISOString() : undefined;
})();
const displayDate = (() => {
  const date = parseLocalDate(post.data.pubDate);
  return date
    ? date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }).toLowerCase()
    : post.data.pubDate;
})();
const description = post.data.description ?? 'a short post on something';
const readingTimeMinutes = (() => {
  const body = typeof post.body === 'string' ? post.body.trim() : '';
  const words = body ? body.split(/\s+/).length : 0;
  const multiplier = post.data.cat === 'code' ? 1.3 : 1;
  return Math.max(1, Math.round((words / 140) * multiplier)) || 2;
})();
const readingTimeLabel = (() => {
  if (readingTimeMinutes < 60) {
    return `approx ${readingTimeMinutes}m read`;
  }

  const hours = Math.floor(readingTimeMinutes / 60);
  const minutes = readingTimeMinutes % 60;
  return minutes
    ? `approx ${hours}h ${minutes}m read`
    : `approx ${hours}h read`;
})();
---
<style>
:root {
  /* adjust these to taste */
  --content-max-width: 800px;
  --side-gutter: 1rem;
}

/* prevent any accidental overflow */
html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

/* make all code blocks wrap */
code,
pre {
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* body text line height */
.markdown-body {
  line-height: 1.8;
}

/* Post title styling */
.post-title-main {
  font-size: 2.6rem;
  line-height: 1.2;
  margin: 0 0 0.5rem;
  font-weight: 700;
  letter-spacing: -0.03em;
  font-family: var(--font-mono);
}

.post-description {
  color: #b5b5b5;
  margin: 0;
  font-size: 1.05rem;
  line-height: 1.7;
  font-family: var(--font-mono);
}

.post-subline {
  margin-bottom: 2rem;
}

.post-meta {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #777;
  font-size: 0.9rem;
  letter-spacing: 0.04em;
  font-family: var(--font-mono);
  margin: 0 0 0.6rem;
}

.post-meta-sep {
  color: #444;
}

.post-readtime {
  letter-spacing: 0.04em;
}

@media (max-width: 600px) {
  .post-subline {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.4rem;
  }

  .post-meta {
    flex-wrap: wrap;
  }
}

/* table of contents */
.toc {
  border-left: 2px solid rgba(var(--accent-rgb), 0.35);
  padding-left: 1rem;
  margin: 0 0 2rem;
  background: rgba(var(--accent-rgb), 0.06);
  padding: 0.8rem 1rem;
  border-radius: 8px;
}

.toc-title {
  font-size: 0.85rem;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: #94a3b8;
  margin-bottom: 0.6rem;
  font-weight: 600;
}

.toc-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.toc-item {
  margin: 0.3rem 0;
}

.toc-item a {
  color: var(--accent);
  text-decoration: none;
  transition: color 0.2s ease;
}

.toc-item a:hover {
  color: var(--accent-hover);
}

.toc-depth-2 {
  margin-left: 1rem;
  font-size: 0.95em;
}

.toc-depth-3 {
  margin-left: 2rem;
  font-size: 0.9em;
  opacity: 0.85;
}

/* Perfect centering wrapper */
.centered-wrapper {
  display: grid;
  grid-template-columns: minmax(var(--side-gutter), 1fr) min(var(--content-max-width), calc(100% - (var(--side-gutter) * 2))) minmax(var(--side-gutter), 1fr);
  width: 100%;
}

.centered-wrapper > * {
  grid-column: 2;
}

/* main article container */
article.post-plain {
  box-shadow: none;
  background: none;
  border: none;

  /* fluid width up to a max, centered */
  width: 100%;
  max-width: var(--content-max-width);
  margin: 3rem auto;         /* top/bottom breathing room, centered */
  padding: 0;                /* remove side padding */
  box-sizing: border-box;
  
  /* Apply equal padding left and right for better centering */
  padding-left: var(--side-gutter);
  padding-right: var(--side-gutter);
}

/* make images and svgs flexible */
article.post-plain img,
article.post-plain svg {
  display: block;
  max-width: 100%;
  height: auto;
  width: 100%;               /* ensure full width on mobile */
  margin: 1.5rem auto;       /* vertical spacing, centered */
  border-radius: 10px;
  box-shadow: 0 2px 12px rgba(var(--accent-rgb), 0.12);
  overflow: visible;         /* ensure SVG contents remain visible */
}

/* tweak typography on small screens if you like */
@media (max-width: 600px) {
  :root {
    --side-gutter: 0.1rem;  /* 50% of the original 1rem */
  }
  
  .post-title-main {
    font-size: 2.2rem;  /* Slightly tighter for mobile */
    margin-top: 0.5rem;
  }
  .post-date-main {
    font-size: 0.95rem;
  }
  
  /* Better SVG handling for mobile */
  article.post-plain svg {
    height: auto !important;  /* Override any inline height */
    font-size: 12px !important; /* Slightly reduce SVG text size on mobile */
  }
}
</style>

<Layout
  title={post.data.title}
  description={description}
  ogType="article"
  publishedTime={publishedTime}
  schemaArticle={{
    title: post.data.title,
    description,
    publishedTime,
  }}
>
  <div class="centered-wrapper">
    <article class="post-plain markdown-body">
      <div class="post-meta">
        <time datetime={post.data.pubDate}>{displayDate}</time>
        <span class="post-meta-sep">â€¢</span>
        <span class="post-readtime">{readingTimeLabel}</span>
      </div>
      <h1 class="post-title-main">{post.data.title}</h1>
      <div class="post-subline">
        {post.data.description && (
          <p class="post-description">{post.data.description}</p>
        )}
      </div>
      {showContentsTable && tocHeadings.length > 0 && (
        <nav class="toc" aria-label="Table of contents">
          <div class="toc-title">Contents</div>
          <ol class="toc-list">
            {tocHeadings.map(heading => (
              <li class={`toc-item toc-depth-${heading.depth}`}>
                <a href={`#${heading.slug}`}>{heading.text}</a>
              </li>
            ))}
          </ol>
        </nav>
      )}
      <Content />
    </article>
  </div>
  <script type="module" src={galleryScriptUrl}></script>
</Layout>
