---
import Layout from '../layouts/Layout.astro';
import Home from '../components/Home.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => data.published);
const favoriteSong = {
  title: 'violence (original mix) — grimes, i_o',
  url: 'https://open.spotify.com/track/3KeOFns3LGJuh1lapMm9eA',
};
---

<Layout
  title="anuraag — notes" 
  description="Field notes on systems, ML, GPUs, and biology, plus reverse engineering writeups and project updates."
  favoriteSong={favoriteSong}
>
  <Home posts={posts} />
</Layout>
